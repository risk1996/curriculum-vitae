---
interface Props {
  class?: string;
  name: string;
  desc: string;
  info?: string;
}
---

<div class={Astro.props.class}>
  <h4 class="text-xl font-medium">{Astro.props.name}</h4>
  <p class="text-base text-tapa-600">
    {Astro.props.desc}
  </p>
  <p class="text-sm text-tapa-500">
    {Astro.props.info}
  </p>
</div>

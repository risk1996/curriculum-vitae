---
import { SEO } from "astro-seo";

import "@fontsource-variable/inter";

interface Props {
  class?: string;
  lang: "en";
  title: string;
  description: string;
  keywords: string[];
  author: string;
}
---

<html lang={Astro.props.lang}>
  <head>
    <title>{Astro.props.title}</title>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}/favicon.svg`}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <meta name="keywords" content={Astro.props.keywords.join(", ")} />
    <meta name="author" content={Astro.props.author} />

    <SEO
      openGraph={{
        basic: {
          title: Astro.props.title,
          type: "website",
          image: `${import.meta.env.BASE_URL}/open-graph.png`,
          url: `${import.meta.env.SITE}${import.meta.env.BASE_URL}`,
        },
        optional: { description: Astro.props.description },
      }}
    />
  </head>

  <body class={Astro.props.class}>
    <slot />
  </body>
</html>
